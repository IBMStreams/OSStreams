<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>install</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.ibm.streams:streams.operator.samples</include>
                <include>com.ibm.streams:streams.operator</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>ext/lib</outputDirectory>
                        <excludes>
                            <exclude>com.ibm.streams:streams.*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.ibm.streams:streams.application.models</include>
                <include>com.ibm.streams:streams.base</include>
                <include>com.ibm.streams:streams.control.internal</include>
                <include>com.ibm.streams:streams.controller</include>
                <include>com.ibm.streams:streams.javart.bootstrap</include>
                <include>com.ibm.streams:streams.messages</include>
                <include>com.ibm.streams:streams.operator.internal.javaop</include>
                <include>com.ibm.streams:streams.operator.internal</include>
                <include>com.ibm.streams:streams.platform</include>
                <include>com.ibm.streams:streams.spl.compiler.impl</include>
                <include>com.ibm.streams:streams.spl.expressions</include>
                <include>com.ibm.streams:streams.spl.internal.impl</include>
                <include>com.ibm.streams:streams.spl.internal</include>
                <include>com.ibm.streams:streams.spl.messages</include>
                <include>com.ibm.streams:streams.spl.tools.internal</include>
                <include>com.ibm.streams:streams.spl-app-info</include>
                <include>com.ibm.streams:streams.spl-make-doc</include>
                <include>com.ibm.streams:streams.trace</include>
            </includes>
            <binaries>
                <outputDirectory>system/impl/lib</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>ext/lib</outputDirectory>
                        <excludes>
                            <exclude>com.ibm.streams:streams.*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <includes>
                            <include>etc/**</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.ibm.streams:streams.operator.samples</include>
            </includes>
            <binaries>
                <outputDirectory>samples/spl/feature/JavaOperators/lib</outputDirectory>
                <outputFileNameMapping>samples.jar</outputFileNameMapping>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <excludes>
                            <exclude>*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
